  <!-- PROBLEM 2: Find Maximum -->
  <subsection xml:id="subsec-test-problem-2">
    <title>Puzzle 2: Find Maximum</title>
    
    <exercise label="parsons_test_2" language="python" indentation="hide">
      <statement>
        <p>
          Arrange the code blocks to create a function called <c>find_max</c> that 
          takes a list of numbers and returns the largest number.
        </p>
        <p>
          Example: <c>find_max([3, 7, 2, 9, 1])</c> should return <c>9</c>
        </p>
      </statement>
      <blocks>
        <block order="1">
          <cline>def find_max(numbers):</cline>
        </block>
        
        <block order="2">
          <choice correct="yes">
            <cline>    max_val = numbers[0]</cline>
          </choice>
          <choice>
            <cline>    max_val = 0</cline>
          </choice>
        </block>
        
        <block order="3">
          <cline>    for num in numbers:</cline>
        </block>
        
        <block order="4">
          <choice correct="yes">
            <cline>        if num &gt; max_val:</cline>
          </choice>
          <choice>
            <cline>        if num &lt; max_val:</cline>
          </choice>
        </block>
        
        <block order="5">
          <cline>            max_val = num</cline>
        </block>
        
        <block order="6">
          <cline>    return max_val</cline>
        </block>
      </blocks>
    </exercise>

