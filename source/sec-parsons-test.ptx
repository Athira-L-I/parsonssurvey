  <subsection xml:id="subsec-test-problem-1">
    <title>Puzzle 1: Calculate Sum of Positive Numbers</title>
    
    <exercise label="parsons_test_1" language="python" indentation="hide">
      <statement>
        <p>
          Arrange the code blocks to create a function called <c>sum_positive</c> that 
          takes a list of numbers and returns the sum of only the positive numbers 
          (numbers greater than 0).
        </p>
        <p>
          Example: <c>sum_positive([5, -2, 3, -1, 8])</c> should return <c>16</c>
        </p>
      </statement>
      <blocks>
        <block order="1">
          <cline>def sum_positive(numbers):</cline>
        </block>
        
        <block order="2">
          <cline>    total = 0</cline>
        </block>
        
        <block order="3">
          <cline>    for num in numbers:</cline>
        </block>
        
        <block order="4">
          <choice correct="yes">
            <cline>        if num &gt; 0:</cline>
          </choice>
          <choice>
            <cline>        if num &gt;= 0:</cline>
          </choice>
        </block>
        
        <block order="5">
          <choice correct="yes">
            <cline>            total = total + num</cline>
          </choice>
          <choice>
            <cline>            total = num</cline>
          </choice>
        </block>
        
        <block order="6">
          <cline>    return total</cline>
        </block>
      </blocks>
    </exercise>

    

