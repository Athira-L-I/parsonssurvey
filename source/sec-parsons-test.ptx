  <!-- PROBLEM 3: Count Matches -->
  <subsection xml:id="subsec-test-problem-3">
    <title>Puzzle 3: Count Matches</title>
    
    <exercise label="parsons_test_3" language="python" indentation="hide">
      <statement>
        <p>
          Arrange the code blocks to create a function called <c>count_matches</c> that
          takes a list of numbers and a target value, and returns how many times the
          target appears in the list.
        </p>
        <p>
          Example: <c>count_matches([5, 3, 5, 7, 5], 5)</c> should return <c>3</c>
        </p>
      </statement>
      <blocks>
        <block order="1">
          <cline>def count_matches(numbers, target):</cline>
        </block>

        <block order="2">
          <cline>    count = 0</cline>
        </block>

        <block order="3">
          <cline>    for num in numbers:</cline>
        </block>

        <block order="4">
          <choice correct="yes">
            <cline>        if num == target:</cline>
          </choice>
          <choice>
            <cline>        if num != target:</cline>
          </choice>
        </block>

        <block order="5">
          <choice correct="yes">
            <cline>            count = count + 1</cline>
          </choice>
          <choice>
            <cline>            count = count + num</cline>
          </choice>
        </block>

        <block order="6">
          <cline>    return count</cline>
        </block>
      </blocks>
    </exercise>

